{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "plugins": [
    [
     "module-resolver",
      {
        "root": [
          "./src/",
        ],
        "extensions": [".js", ".jsx", ".ts", ".tsx", ".json"],
      }
    ]
  ]
}
